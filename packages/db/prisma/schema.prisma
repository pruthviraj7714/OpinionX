generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String   @id @default(uuid())
  username String
  email    String
  password String
  role     Role
  markets  Market[]
}

model Market {
  id     String  @id @default(uuid())
  userId String
  opinion   String
  description String
  user   User    @relation(fields: [userId], references: [id])
  orders Order[]
  trades Trade[]
}

model Order {
  id       String @id @default(uuid())
  marketId String
  market   Market @relation(fields: [marketId], references: [id])
}

model Trade {
  id       String @id @default(uuid())
  marketId String
  market   Market @relation(fields: [marketId], references: [id])
}

enum Role {
  USER
  ADMIN
}
