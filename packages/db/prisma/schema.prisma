generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  email     String
  password  String
  balance   Int        @default(1000000)
  role      Role
  position  Position[]
  markets   Market[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Market {
  id              String       @id @default(uuid())
  opinion         String
  description     String
  status          MarketStatus @default(OPEN)
  expiryTime      DateTime
  resolvedOutcome Outcome?

  b         Int //liquidity parameter
  qYes      Int
  qNo       Int
  positions Position[]
  userId    String
  user      User       @relation(fields: [userId], references: [id])
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model AmmTrade {
  id        String   @id @default(uuid())
  userId    String
  marketId  String
  outcome   Outcome
  shares    Int
  cost      Int
  createdAt DateTime @default(now())
}

model Position {
  id       String @id @default(uuid())
  userId   String
  user     User   @relation(fields: [userId], references: [id])
  marketId String
  market   Market @relation(fields: [marketId], references: [id])

  yesShares Int @default(0)
  noShares  Int @default(0)
  totalCost Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, marketId])
}

enum Role {
  USER
  ADMIN
}

enum MarketStatus {
  OPEN
  CLOSED
  RESOLVED
}

enum Outcome {
  YES
  NO
}
